<h1>My Portfolio</h1>

<div class="search-area">
  <h2>Search Stocks</h2>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol",
                           autofocus: true, class: "form-control form-control-lg no-right-padding" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success  no-left-padding" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>

<% unless @tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>
